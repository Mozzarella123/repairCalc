{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "lib": ["es5", "es6", "dom"],
    "module": "es6",
    "target": "es5",
    "downlevelIteration" : true,
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop" : true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "src/setupTests.ts"
  ]
}